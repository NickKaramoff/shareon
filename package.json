{
  "name": "shareon",
  "version": "1.6.1",
  "description": "Lightweight, stylish and ethical share buttons for popular social networks",
  "license": "MIT",
  "homepage": "https://shareon.js.org",
  "keywords": [
    "share buttons",
    "sharing",
    "social networks"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NickKaramoff/shareon.git"
  },
  "bugs": {
    "url": "https://github.com/NickKaramoff/shareon/issues"
  },
  "author": {
    "name": "Nikita Karamov",
    "email": "nick@karamoff.dev",
    "url": "https://karamoff.dev"
  },
  "main": "./dist/shareon.cjs",
  "module": "./dist/shareon.mjs",
  "unpkg": "./dist/shareon.min.js",
  "exports": {
    "require": "./dist/shareon.cjs",
    "import": "./dist/shareon.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:js:noinit:cjs": "esbuild src/shareon.js --bundle --format=cjs --outfile=dist/noinit/shareon.cjs",
    "build:js:noinit:esm": "esbuild src/shareon.js --bundle --format=esm --outfile=dist/noinit/shareon.mjs",
    "build:js:noinit:iife": "esbuild src/shareon.js --bundle --minify --global-name=shareon --outfile=dist/noinit/shareon.min.js",
    "build:js:init:cjs": "esbuild src/autoinit.js --bundle --format=cjs --outfile=dist/shareon.cjs",
    "build:js:init:esm": "esbuild src/autoinit.js --bundle --format=esm --outfile=dist/shareon.mjs",
    "build:js:init:iife": "esbuild src/autoinit.js --bundle --minify --global-name=shareon --outfile=dist/shareon.min.js",
    "build:css": "postcss src/style.css --env production --output dist/shareon.min.css",
    "build": "run-p build:**",
	"build-dev:js": "esbuild src/autoinit.js --bundle --sourcemap=inline --global-name=shareon --outfile=dev/shareon.js",
	"build-dev:css": "postcss src/style.css --env development --output dev/shareon.css",
    "build-dev": "run-p build-dev:**",
    "lint": "eslint src/*.js",
    "release": "np",
    "size": "size-limit",
    "test": "yarn lint && yarn build && yarn size",
    "postversion": "yarn build"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "autoprefixer": "^10.2.1",
    "browserslist": "^4.16.1",
    "cssnano": "^4.1.10",
    "esbuild": "^0.8.32",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "np": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-banner": "^4.0.0",
    "postcss-calc": "^8.0.0",
    "postcss-cli": "^8.3.1",
    "postcss-css-variables": "^0.17.0",
    "size-limit": "^4.9.1"
  },
  "size-limit": [
    {
      "limit": "7 KB",
      "path": "./dist/shareon.min.css",
      "webpack": false
    },
    {
      "limit": "1 KB",
      "path": "./dist/shareon.min.js",
      "webpack": false
    },
    {
      "limit": "1 KB",
      "path": [
        "./dist/shareon.cjs"
      ]
    },
    {
      "limit": "1 KB",
      "path": [
        "./dist/shareon.mjs"
      ]
    }
  ]
}
